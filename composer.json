{
    "name": "dicr/yii2-yandex-xml",
    "type": "yii2-extension",
    "license": "Apache-2.0",
    "description": "API XML-поиска Яндекс для Yii2",
    "keywords": ["dicr", "yii2", "yandex", "xml"],
    "homepage": "https://gitlab.com/dicr/yii2-yandex-xml",
    "authors": [
        {
            "name": "Igor Tarasov",
            "email": "develop@dicr.org",
            "homepage": "http://dicr.org",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/dicr/yii2-yandex-xml.git"
    },
    "autoload": {
        "psr-4": {
            "dicr\\yandex\\xml\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dicr\\tests\\": "tests/"
        }
    },
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": "~7.4 || ~8.0.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",

        "yiisoft/yii2": "~2.0",

        "dicr/yii2-helper": "~4.0",
        "dicr/yii2-http": "~2.1",
        "dicr/yii2-validate": "~2.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~9.5"
    },
    "repositories": [
        {"type": "composer", "url": "https://asset-packagist.org"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-helper.git"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-http.git"},
        {"type": "gitlab", "url": "https://gitlab.com/dicr/yii2-validate.git"}
    ]
}
